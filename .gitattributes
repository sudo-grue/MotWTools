# Auto detect text files and perform LF normalization
* text=auto

# C# source files
*.cs text diff=csharp eol=crlf
*.csproj text eol=crlf
*.sln text eol=crlf

# XAML files
*.xaml text eol=crlf

# Documentation
*.md text eol=crlf
*.txt text eol=crlf

# Git configuration
.gitattributes text eol=crlf
.gitignore text eol=crlf

# Windows specific files should always use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.exe binary
*.dll binary
*.pdb binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.zip binary
